<!DOCTYPE html>
<html lang="fr">
  <head>
  	<!-- meta -->
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
 	<meta name="viewport" content="width=device-width, initial-scale=1.0">
 	
 	<!-- include -->
  	{% block stylesheets %}
  	<link rel="stylesheet" href="{{ asset('/assets/css/bootstrap.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/adextra/css/style.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/adextra/css/magnific-popup.css') }}" type="text/css" />
	{% endblock %}
	
	
    <title>{% block title %}AD Extranet Assets Management{% endblock %}</title>
  </head>
  <body>
  	<div class="container">
		<header>
			<div class="row span12 nospace header">
				<a id="home" href="{{ path('ad_index') }}">Home</a>
				
				
				{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
				    <p>Connecté en tant que {{ app.user.username }} - <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></p>
				{% else %}
				    <a id="conn" href="{{ path('fos_user_security_login') }}">Connexion</a>
				{% endif %}
				
			</div>
		<h1>Extranet Laborie</h1>
		</header>
	  	<div class="content well">
		{% block body %}
		
		{% endblock %}
		</div>
 	</div>
 	
 	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
	{% block javascripts %}
		
	{% endblock %}
 
  </body>
</html>